# i3 config file (v4)
# https://i3wm.org/docs/userguide.html

# mod key
set $mod Mod1
set $super Mod4

# font
font pango:hackgen 12

# direction (vim)
set $left h
set $down j
set $up k
set $right l

# change focus
bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right

# move focused window
bindsym $mod+shift+$left move left
bindsym $mod+shift+$down move down
bindsym $mod+shift+$up move up
bindsym $mod+shift+$right move right

# fullscreen
bindsym $mod+f fullscreen toggle

# scratchpad
bindsym $mod+shift+semicolon move scratchpad
bindsym $mod+semicolon scratchpad show
#for custom keyboard
bindsym $mod+shift+minus move scratchpad
bindsym $mod+minus scratchpad show

# kill
bindsym $mod+q kill
bindsym --release button2 kill

# restart
bindsym $mod+shift+r restart

# workspace
set $ws1 1:
set $ws2 2:
set $ws3 3:
set $ws4 4:
set $ws5 5:
set $ws6 6:
set $ws7 7:
set $ws8 8:
set $ws9 9:
set $ws10 10:

bindsym $mod+comma workspace prev
bindsym $mod+period workspace next
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+10 workspace number $ws10

bindsym $mod+shift+comma move container to workspace prev
bindsym $mod+shift+period move container to workspace next
bindsym $mod+shift+1 move container to workspace number $ws1
bindsym $mod+shift+2 move container to workspace number $ws2
bindsym $mod+shift+3 move container to workspace number $ws3
bindsym $mod+shift+4 move container to workspace number $ws4
bindsym $mod+shift+5 move container to workspace number $ws5
bindsym $mod+shift+6 move container to workspace number $ws6
bindsym $mod+shift+7 move container to workspace number $ws7
bindsym $mod+shift+8 move container to workspace number $ws8
bindsym $mod+shift+9 move container to workspace number $ws9
bindsym $mod+shift+10 move container to workspace number $ws10

# system
set $system "system [q:poweroff, r:reboot, s:suspend, l:lock, L:logout]"
bindsym $mod+shift+q mode $system
mode $system {
  bindsym q exec "systemctl poweroff"; mode "default"
  bindsym r exec "systemctl reboot"; mode "default"
  bindsym s exec "systemctl suspend"; mode "default"
  bindsym l exec ~/.config/i3/i3lock-color.sh; mode "default"
  bindsym L exec "i3-msg exit"; mode "default"
  bindsym Escape mode "default"
}

# layout (style)
set $layout "layout [h:split h, v:split v, s:stacking, t:tabbed, e:toggle, f:floating, p:parent, c:child]"
bindsym $mod+s mode $layout
mode $layout {
  bindsym h split h; mode "default"
  bindsym v split v; mode "default"
  bindsym s layout stacking; mode "default"
  bindsym t layout tabbed; mode "default"
  bindsym e layout toggle split; mode "default"
  bindsym f floating toggle; mode "default"
  bindsym p focus parent; mode "default"
  bindsym c focus child; mode "default"
  bindsym Escape mode "default"
}

# audio
set $audio "audio [vol:m0-9, space:play-pause, <:prev, >:next, j:voldn, k:volup, l:forward, h:backward]"
set $setvol pactl set-sink-volume @DEFAULT_SINK@
bindsym $mod+a mode $audio
mode $audio {
  bindsym m exec $setvol 0%
  bindsym 1 exec $setvol 10%
  bindsym 2 exec $setvol 20%
  bindsym 3 exec $setvol 30%
  bindsym 4 exec $setvol 40%
  bindsym 5 exec $setvol 50%
  bindsym 6 exec $setvol 60%
  bindsym 7 exec $setvol 70%
  bindsym 8 exec $setvol 80%
  bindsym 9 exec $setvol 90%
  bindsym 0 exec $setvol 100%
  bindsym space exec playerctl play-pause
  bindsym shift+comma exec playerctl previous
  bindsym shift+period exec playerctl next
  bindsym h exec playerctl position 5-
  bindsym l exec playerctl position 5+
  bindsym j exec playerctl volume 0.1-
  bindsym k exec playerctl volume 0.1+
  bindsym c exec "playerctl metadata title | sed 's/\..*//' | xsel --clipboard --input"
  bindsym Escape mode "default"
}

# resize
bindsym $mod+r mode "resize"
set $resize_init 5 px or 5 ppt
mode "resize" {
  bindsym $left resize shrink width $resize_init
  bindsym $down resize grow height $resize_init
  bindsym $up resize shrink height $resize_init
  bindsym $right resize grow width $resize_init
  bindsym Escape mode "default"
}

# screenshot
set $capture "screen shot"
set $pic_dir /home/frla/pic/screenshot
set $delay 0.01
set $date $(date +%Y%m%d%H%M%S)
bindsym $mod+shift+s mode $capture
mode  $capture {
  bindsym a exec maim -d $delay | xclip -selection clipboard -t image/png;  mode "default"
  bindsym s exec maim -s -d $delay | xclip -selection clipboard -t image/png;  mode "default"
  bindsym shift+a exec maim -d $delay $pic_dir/$date.png;  mode "default"
  bindsym shift+s exec maim -s -d $delay $pic_dir/$date.png;  mode "default"
  bindsym Escape mode "default"
}

