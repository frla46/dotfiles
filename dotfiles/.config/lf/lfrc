# lfrc
# https://raw.githubusercontent.com/gokcehan/lf/master/etc/lfrc.example

## setitngs
set shell zsh
set shellopts '-euy'
set ifs "\n"
set scrolloff 5
set ignorecase true
set incsearch true

# preview
set previewer ctpv
set cleaner ctpvclear
&ctpv -s $id
&ctpvquit $id

## mappings
# disable mappings
map y
map d
map "'"
map s
map H
map M
map L
map u
map '"'

# set mappings
# map <esc> quit
map <enter> :shell
map yy :copy
map yp :yank-path
map yd :yank-dirname
map yn :yank-basename
map y. :yank-basename-without-extension
map dd :cut
map p :paste
map P :link
map x $$f
map X !$f
map <c-x> &$f
map <backspace2> :set hidden!
map e $lf -remote "send $id \$$EDITOR \$fx"
map E &alacritty -e nvim $fx
map zp :set preview!
map DD :trash
map DR :trash-restore
map ? !file --mime-type -Lb $fx
map ` :mark-load
map <c-z> $kill -STOP $PPID
map gv :push :glob-select<space>
map R :bulkrename
map A :rename
map I :push A<c-a>
map i :push A<a-b><a-b><a-f>
map a :push A<a-b>
map J :updir; down; open
map K :updir; up; open
map uv :unselect
map um :mark-remove
map f :zi

## commands
cmd open &{{
  mimetype=$(file --mime-type -Lb $fx)
  case $mimetype in
    text/* | application/json | inode/x-empty )
      lf -remote "send $id \$$EDITOR \$fx";;
    audio/* | video/* )
      mpv $fx;;
    image/*)
      pqiv --browse $fx;;
    application/pdf )
      zathura $fx;;
    exe/* )
      wine $fx;;
    *)
      case $fx in
        *.pptx | *.odt | *.docx | *.ods | *.xlsx )
          libreoffice $fx;;
        *.zip | *.rar | *.7z )
          lf -remote "send $id :extract \$fx";;
        * ) :;;
      esac;;
  esac
}}

cmd trash $trash-put $fx
cmd trash-restore $trash-restore

cmd extract ${{
    set -f
    atool -x $fx
}}

cmd yank-path $printf '%s' "$fx" | xclip -i -selection clipboard
cmd yank-dirname $dirname -- "$fx" | head -c-1 | xclip -i -selection clipboard
cmd yank-basename $basename -a -- $fx | head -c-1 | xclip -i -selection clipboard
cmd yank-basename-without-extension ${{
  echo "$fx" |
    xargs -r -d '\n' basename -a |
    awk -e '{
      for (i=length($0); i > 0; i--) {
        if (substr($0, i, 1) == ".") {
          if (i == 1) print $0
          else print substr($0, 0, i-1)
          break
        }
      }
      if (i == 0)
        print $0
    }' |
    if [ -n "$fs" ]; then cat; else tr -d '\n'; fi |
    xclip -i -selection clipboard
}}

cmd on-cd &{{
  # printf "\033]0; $PWD\007" > /dev/tty
  zoxide add $(pwd)
  printf "\033]0; $(pwd | sed "s|$HOME|~|")\007" > /dev/tty
}}

cmd bulkrename ${{
  vimv $(basename -a -- $fx)
  lf -remote "send $id load"
  lf -remote "send $id unselect"
}}

cmd link %{{
  # y (select for copy) and P to paste soft-link
  # d (select for cut) and P to paste hard-link
  set -- $(cat ~/.local/share/lf/files)
  mode="$1"
  shift
  if [ "$#" -lt 1 ]; then
    lf -remote "send $id echo no files to link"
    exit 0
  fi
  case "$mode" in
    copy) ln -sr -t . -- "$@";;
    move) ln -t . -- "$@";;
  esac
  rm ~/.local/share/lf/files
  lf -remote "send clear"
}}

# zoxide
cmd zi ${{
	result="$(zoxide query -i)"
	lf -remote "send $id cd $result"
}}
